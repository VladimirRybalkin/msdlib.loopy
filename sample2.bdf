debug

// gpio components
gpio in buttons {:
  send_gpio(gpo_buttons, read_buttons());
:}

gpio in switches
gpio out leds

// queue sizes
swqueue 25
hwqueue 10

medium ethernet {
  mac  "00:0a:35:01:FB:E3"
//  ip   "127.16.13.145"
  ip   "192.168.2.10"
  mask "255.255.255.0"
  gate "192.168.2.1"
  port 8844
}

core rng 1.00.a {
  source "sample2.bdf"

  port in in1
  port out out1
} 

core adder 1.00.a {
  source "sample2.bdf"

  port in in1
  port in in2
  port out out1
} 

core fifo 1.00.a {
  source "sample2.bdf"

  port in in1
  port out out1
}

// instantiate cores
instance rng 1.00.a rng_a {
  cpu in1 {
    swqueue 10
    hwqueue  5
  }
  cpu out1 {
    swqueue 5
    poll 5
  }
}

instance rng 1.00.a rng_b {
  cpu in1, out1
}

instance adder 1.00.a adder_a {
  cpu in1, in2, out1
}

instance fifo 1.00.a fifo_a {
  cpu in1, out1
}

