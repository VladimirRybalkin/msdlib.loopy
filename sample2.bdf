core rng 1.00.a {
//  source /some/file/refere.nce

  in in1 {
    width 32
  }
  out out1
} 

core adder 1.00.a {
//  source /some/file/refere.nce

  in in1
  in in2
  out out1
} 

core fifo 1.00.a {
//  source /some/file/refere.nce

  in in1
  out out1
}

// instantiate cores
instance rng rng_a {
  cpu in1 {
    swqueue 10
    hwqueue  5
  }
  cpu out1 {
    poll
  }
}

instance rng rng_b {
  cpu in1, out1
}

instance adder adder_a {
  cpu in1, in2, out1
}

instance fifo fifo_a {
  cpu in1, out1
}

